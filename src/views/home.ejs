        <div class = "col-sm-4"></div>
    	</div>

    	<div class = "row tutorSearch">
    		<div class = "col-sm-3"></div>
        <div class = "col-sm-6 ">
    			<form action="" class="form">
            <div class="form-group center">
                <select class = 'form-control' id = 'subject' value="Subject">
                    <option> -- Choose Subject -- </option>
                    <option> Physics </option>
                    <option> Mathematics </option>
                    <option> Biology </option>
                    <option> Chemistry </option>
                    <option> More </option>
                </select>
            </div>
            <div class="form-group">
                <select class = 'form-control' id = 'tuiton-type' value="Type">
                    <option> -- Choose Level -- </option>
                    <option> Primary School </option>
                    <option> O-level </option>
                    <option> A-level </option>
                    <option> IB Diploma </option>
                    <option> More </option>
                </select>
            </div>

            <div class="form-group">
                <select class = 'form-control' id = 'subject' value="">
                    <option> -- Choose Type-- --</option> 
                     <option> Home tutoring </option>
                    <option> Online tutoring </option>
                    <option> One-on-one tutoring </option>
                    <option> Tuition center tutoring </option>
                    
                    <option> More </option>
                </select>
            </div>

            <div class = 'form-group'>
                <input class = 'form-control' type = 'text' placeholder="Location" value = 'Location'>
            </div>

            <div class = 'form-group'>
                <button type = 'button' class = 'btn btn-primary btn-md'> Search Tutor </button>
            </div>
          </form>
  		  </div>
        <div class = "col-sm-3"></div>
      </div>
    </div>

